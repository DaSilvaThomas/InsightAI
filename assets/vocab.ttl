@prefix ra: <http://localhost/projects/M2THYP/rAIsume/> .
@prefix dcterms: <http://purl.org/dc/terms/> .
@prefix rdfs:  <http://www.w3.org/2000/01/rdf-schema#> .
@prefix rdf:   <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix xsd:   <http://www.w3.org/2001/XMLSchema#> .

ra: a rdf:Property ;  # Ontologie
  dcterms:title "rAIsume vocabulary" ;
  dcterms:creator "Thomas DA SILVA" .

# Classes
ra:Document a rdfs:Class .
ra:Text a rdfs:Class .
ra:Summary a rdfs:Class .

# Propriétés
ra:hasText a rdf:Property ; rdfs:domain ra:Document ; rdfs:range ra:Text .
ra:hasSummary a rdf:Property ; rdfs:domain ra:Document ; rdfs:range ra:Summary .
ra:generatedBy a rdf:Property ; rdfs:domain ra:Summary ; rdfs:range rdfs:Literal .
ra:summaryDate a rdf:Property ; rdfs:domain ra:Summary ; rdfs:range xsd:dateTime .
ra:sourceFile a rdf:Property ; rdfs:domain ra:Document ; rdfs:range rdfs:Literal .
ra:language a rdf:Property ; rdfs:domain ra:Document, ra:Text, ra:Summary ; rdfs:range rdfs:Literal .

# Dublin Core minimal
ra:dc_title a rdf:Property ; rdfs:subPropertyOf dcterms:title .
ra:dc_creator a rdf:Property ; rdfs:subPropertyOf dcterms:creator .
ra:dc_description a rdf:Property ; rdfs:subPropertyOf dcterms:description .
